<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/heritage_title"
        android:layout_width="630dp"
        android:layout_height="80dp"
        android:layout_marginTop="-5dp"
        android:background="@color/lighterGrey"/>

    <Button
        android:id="@+id/acceleration_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        android:text="Acceleration"
        android:textSize="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:background="@null"
        android:textColor="@color/Grey"/>

    <ImageView
        android:id="@+id/mso_sports_text"
        android:layout_width="647dp"
        android:layout_height="840dp"
        android:layout_below="@+id/heritage_title"
        android:layout_marginTop="-23dp"/>

    <ImageView
        android:layout_width="1900dp"
        android:layout_height="1500sp"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="630dp"
        android:scaleType="fitXY"
        android:src="@drawable/dashboard" />




</RelativeLayout>